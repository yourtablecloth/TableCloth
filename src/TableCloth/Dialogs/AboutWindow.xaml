<Window x:Class="TableCloth.Dialogs.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TableCloth.ViewModels"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:res="clr-namespace:TableCloth.Resources;assembly=TableCloth.Core"
        xmlns:local="clr-namespace:TableCloth"
        xmlns:controls="clr-namespace:TableCloth.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:AboutWindowViewModelForDesigner, IsDesignTimeCreatable=True}"
        Style="{DynamicResource MainWindowStyle}"
        Title="{x:Static res:UIStringResources.AboutWindow_Title}" Width="640" Height="520" MinWidth="320" MinHeight="280">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding AboutWindowLoadedCommand}">
                <i:InvokeCommandAction.CommandParameter>
                    <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                </i:InvokeCommandAction.CommandParameter>
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Sponsor Banner -->
        <Border Grid.Row="0"
                Background="#FFF8E1" BorderBrush="#FFE082" BorderThickness="1" Padding="10" Margin="0 0 0 10" CornerRadius="4" Cursor="Hand"
                MouseLeftButtonUp="SponsorBanner_MouseLeftButtonUp">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap">
                    <Run Text="💖" />
                    <Run Text="식탁보 프로젝트가 도움이 되셨나요? GitHub Sponsors를 통해 후원해주시면 프로젝트 지속에 큰 힘이 됩니다!" />
                </TextBlock>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="10 0 0 0" Foreground="#E91E63" FontWeight="Bold" Text="후원하기 →" />
            </Grid>
        </Border>
        
        <!-- Legal Notice Section -->
        <StackPanel Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="{x:Static res:UIStringResources.AboutWindow_CopyrightText}" />
            <TextBlock Text="{x:Static res:UIStringResources.AboutWindow_TrademarkText}" Foreground="Gray" FontSize="11" />
        </StackPanel>
        
        <!-- Version Info Section -->
        <Grid Grid.Row="2" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static res:UIStringResources.AboutWindow_AppVersionText}" Margin="0 0 10 2" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AppVersion}" FontWeight="SemiBold" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static res:UIStringResources.AboutWindow_CatalogDateText}" Margin="0 2 10 0" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CatalogDate}" FontWeight="SemiBold" />
        </Grid>

        <!-- License Info Section -->
        <Grid Grid.Row="3" Margin="0 0 0 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{x:Static res:UIStringResources.AboutWindow_OssLicenseText}" FontWeight="SemiBold" Margin="0 0 0 6" />
            <RichTextBox x:Name="LicenseDetails" Grid.Row="1" 
                         Padding="6"
                         IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" 
                         controls:RichTextBoxHelper.DocumentXaml="{Binding LicenseDetails}" IsDocumentEnabled="True">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </Grid>

        <!-- Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <Button x:Name="OpenWebsiteButton" Padding="10 4" Margin="0 0 5 0" Content="{x:Static res:UIStringResources.Button_OpenHomepageButton}" Command="{Binding OpenWebsiteCommand}">
                    <Button.CommandParameter>
                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                    </Button.CommandParameter>
                </Button>
                <Button x:Name="ShowSysInfo" Padding="10 4" Margin="0 0 5 0" Content="{x:Static res:UIStringResources.Button_ShowSysInfoButton}" Command="{Binding ShowSystemInfoCommand}">
                    <Button.CommandParameter>
                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                    </Button.CommandParameter>
                </Button>
                <Button x:Name="CheckUpdate" Padding="10 4" Margin="0 0 5 0" Content="{x:Static res:UIStringResources.Button_CheckUpdateButton}" Command="{Binding CheckUpdatedVersionCommand}">
                    <Button.CommandParameter>
                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="OpenPrivacyPolicyButton" Padding="10 4" Margin="0 0 5 0" Content="{x:Static res:UIStringResources.Button_PrivacyLink}" Command="{Binding OpenPrivacyPolicyCommand}">
                    <Button.CommandParameter>
                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                    </Button.CommandParameter>
                </Button>
                <Button x:Name="OkayButton" Padding="10 4" Content="{x:Static res:UIStringResources.Button_OkayButton}" IsDefault="True" Click="OkayButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
