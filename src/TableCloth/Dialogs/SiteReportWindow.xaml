<Window x:Class="TableCloth.Dialogs.SiteReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:TableCloth.Resources;assembly=TableCloth.Core"
        mc:Ignorable="d"
        Style="{DynamicResource MainWindowStyle}"
        Title="{x:Static res:UIStringResources.SiteReport_WindowTitle}" 
        Width="480" Height="360" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="{x:Static res:UIStringResources.SiteReport_Description}" 
                   TextWrapping="Wrap" 
                   Margin="0 0 0 15" />
        
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <Border Background="{DynamicResource InfoBannerBackground}" 
                    BorderBrush="{DynamicResource InfoBannerBorder}" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="15" 
                    Margin="0 0 0 10"
                    Cursor="Hand"
                    MouseLeftButtonUp="GoogleFormsButton_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{x:Static res:UIStringResources.SiteReport_GoogleFormsButton}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0 0 0 5" />
                        <TextBlock Text="{x:Static res:UIStringResources.SiteReport_GoogleFormsDescription}" 
                                   TextWrapping="Wrap" 
                                   Foreground="Gray" 
                                   FontSize="12" />
                    </StackPanel>
                    <TextBlock Grid.Column="1" 
                               Text="→" 
                               FontSize="20" 
                               VerticalAlignment="Center" 
                               Margin="10 0 0 0" />
                </Grid>
            </Border>
            
            <Border Background="{DynamicResource InfoBannerBackground}" 
                    BorderBrush="{DynamicResource InfoBannerBorder}" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="15"
                    Cursor="Hand"
                    MouseLeftButtonUp="GitHubIssueButton_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{x:Static res:UIStringResources.SiteReport_GitHubIssueButton}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0 0 0 5" />
                        <TextBlock Text="{x:Static res:UIStringResources.SiteReport_GitHubIssueDescription}" 
                                   TextWrapping="Wrap" 
                                   Foreground="Gray" 
                                   FontSize="12" />
                    </StackPanel>
                    <TextBlock Grid.Column="1" 
                               Text="→" 
                               FontSize="20" 
                               VerticalAlignment="Center" 
                               Margin="10 0 0 0" />
                </Grid>
            </Border>
        </StackPanel>
        
        <Button Grid.Row="2" 
                Content="{x:Static res:UIStringResources.Button_CloseButton}" 
                HorizontalAlignment="Right" 
                Padding="20 8"
                Margin="0 15 0 0"
                Click="CloseButton_Click" />
    </Grid>
</Window>
