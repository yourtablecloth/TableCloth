<Application x:Class="TableCloth.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TableCloth.Converters"
             Startup="Application_Startup">

    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:BooleanToGridRowHeightConverter x:Key="BooleanToGridRowHeightConverter" />
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <converters:ServiceLogoConverter x:Key="ServiceLogoConverter" />
            <converters:EnumBooleanConverter x:Key="EnumBooleanConverter" />
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <converters:BooleanToBackgroundConverter x:Key="BooleanToBackgroundConverter" />
            <converters:BooleanToReadOnlyTextConverter x:Key="BooleanToReadOnlyTextConverter" />

            <!-- Info Banner Colors (Light Mode) -->
            <SolidColorBrush x:Key="InfoBannerBackground" Color="#EFF6FF" />
            <SolidColorBrush x:Key="InfoBannerForeground" Color="#0F172A" />
            <SolidColorBrush x:Key="InfoBannerLinkForeground" Color="#1D4ED8" />
            <SolidColorBrush x:Key="InfoBannerBorder" Color="#BFDBFE" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PresentationFramework.Aero2;component/themes/aero2.normalcolor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
