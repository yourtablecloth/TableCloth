<Window x:Class="Spork.Dialogs.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Spork.ViewModels"
        xmlns:res="clr-namespace:TableCloth.Resources;assembly=TableCloth.Core"
        xmlns:controls="clr-namespace:Spork.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:AboutWindowViewModelForDesigner, IsDesignTimeCreatable=True}"
        Style="{DynamicResource MainWindowStyle}"
        Title="{x:Static res:UIStringResources.AboutWindow_Title}" Width="640" Height="520" ResizeMode="NoResize"
        MinWidth="320" MinHeight="280" WindowStartupLocation="CenterScreen">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding AboutWindowLoadedCommand}">
                <i:InvokeCommandAction.CommandParameter>
                    <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                </i:InvokeCommandAction.CommandParameter>
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Info Banner -->
        <Border Grid.Row="0"
                Background="{DynamicResource InfoBannerBackground}" 
                BorderBrush="{DynamicResource InfoBannerBorder}" 
                BorderThickness="1" Padding="10" Margin="0 0 0 10" CornerRadius="4">
            <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Foreground="{DynamicResource InfoBannerForeground}">
                <Run Text="â“˜" FontWeight="Bold" Foreground="{DynamicResource InfoBannerLinkForeground}" /><Run Text=" " /><Run Text="{x:Static res:UIStringResources.Sponsor_BannerMessage}" /><Run Text=" " /><Hyperlink Click="SponsorBanner_MouseLeftButtonUp" Foreground="{DynamicResource InfoBannerLinkForeground}" FontWeight="SemiBold"><Run Text="{x:Static res:UIStringResources.Sponsor_BannerDetailLink}" /></Hyperlink>
            </TextBlock>
        </Border>
        
        <!-- Legal Notice Section -->
        <StackPanel Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="{x:Static res:UIStringResources.AboutWindow_CopyrightText}" />
            <TextBlock Text="{x:Static res:UIStringResources.AboutWindow_TrademarkText}" Foreground="Gray" FontSize="11" />
        </StackPanel>
        
        <!-- Version Info Section -->
        <Grid Grid.Row="2" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static res:UIStringResources.AboutWindow_AppVersionText}" Margin="0 0 10 2" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AppVersion}" FontWeight="SemiBold" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static res:UIStringResources.AboutWindow_CatalogDateText}" Margin="0 2 10 0" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CatalogVersion}" FontWeight="SemiBold" />
        </Grid>

        <!-- Sponsors Section -->
        <Grid Grid.Row="3" Margin="0 0 0 10" Visibility="{Binding HasSponsors, Converter={StaticResource booleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{x:Static res:UIStringResources.AboutWindow_SponsorsTitle}" FontWeight="SemiBold" Margin="0 0 0 6" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ItemsControl Grid.Column="0" ItemsSource="{Binding Sponsors}" MaxHeight="36" ClipToBounds="True">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0 0 8 4" Padding="6 4" Background="{DynamicResource InfoBannerBackground}" CornerRadius="4" BorderBrush="{DynamicResource InfoBannerBorder}" BorderThickness="1">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="24" Height="24" Margin="0 0 6 0">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AvatarUrl}" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Grid.Column="1" Text="..." VerticalAlignment="Center" FontWeight="Bold" Margin="4 0 0 0" 
                           Foreground="{DynamicResource InfoBannerLinkForeground}" ToolTip="{x:Static res:UIStringResources.AboutWindow_MoreSponsorsTooltip}" />
            </Grid>
        </Grid>

        <!-- License Info Section -->
        <Grid Grid.Row="4" Margin="0 0 0 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{x:Static res:UIStringResources.AboutWindow_OssLicenseText}" FontWeight="SemiBold" Margin="0 0 0 6" />
            <RichTextBox x:Name="LicenseDetails" Grid.Row="1" 
                         Padding="6"
                         IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" 
                         controls:RichTextBoxHelper.DocumentXaml="{Binding LicenseDescription}" IsDocumentEnabled="True">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </Grid>

        <!-- Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <Button Padding="10 4" Margin="0 0 5 0" Command="{Binding OpenAppHomepageCommand}" Content="{x:Static res:UIStringResources.Button_OpenHomepageButton}">
                    <Button.CommandParameter>
                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Padding="10 4" Command="{Binding AboutWindowCloseCommand}" Content="{x:Static res:UIStringResources.Button_OkayButton}">
                    <Button.CommandParameter>
                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}" />
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
